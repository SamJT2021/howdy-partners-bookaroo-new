
<h3><%= current_user.username %></h3>
<% @posts.each_with_index do |post, index| %>
  <div id=<%=index%>>
    <p><%= post.message %></p>
    <p><%= post.created_at.strftime("%H:%M - %d %b %Y") %></p>
  </div>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>

 <%= button_to "Log out", '/log-out', method: :get%>
