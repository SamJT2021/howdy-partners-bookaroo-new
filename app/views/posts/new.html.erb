<div class="new-post-background">
  <div class="navigation-bar">
    
    <%= button_to "Log out", '/log-out', class: "button-type-2", method: :get%>
  </div>

  <div class="new-post-container">
    <h1 class="new-post-title">New post</h1>
    <%= form_for @post do |form| %>
      <%= form.text_area :message, class:"new-post-field" %>

      <%= form.submit "Submit", class:"button-type-4"%>
    <% end %>
  </div>
</div>