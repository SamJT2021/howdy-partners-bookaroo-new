<div class="navigation-bar">
  <%= button_to "Sign up", '/sign-up', class: "button-type-2", method: :get%>
</div>

<div class="credentials-container">
<%= image_tag "icon.png", class:"logo-icon"%>
  <h1>Log in</h1>
    <%= form_tag '/log-in' do %>
    <% if @error %>
    <div class="error-message"><%= @error %></div>
    <% end %>
    <div class="form-section">
      <div><%= label_tag :username%></div>
      <%= text_field_tag :username %>
    </div>
    <div class="form-section">
      <div><%= label_tag :password%></div>
      <%= password_field_tag :password%>
    </div>
    <%= submit_tag "Log in", class: "button-type-3" %>
  <%end%>
</div>
