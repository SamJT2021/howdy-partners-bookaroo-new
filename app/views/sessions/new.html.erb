<div class="navigation-bar">
  <%= button_to "Sign up", '/sign-up', class: "button-type-2", method: :get%>
</div>

<div class="credentials-container">
  <h1>Log in</h1>
    <%= form_tag '/log-in' do %>
    <div class="form-section">
      <%= label_tag :username%>
      <%= text_field_tag :username %>
    </div>
    <div class="form-section">
      <%= label_tag :password%>
      <%= password_field_tag :password%>
    </div>
    <%= submit_tag "Log in"%>
  <%end%>
</div>
